{
  "$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
  "files": {
    "ignore": [
      "**/artifacts/**",
      "packages/contract/coverage.json",
      "packages/contract/coverage/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double"
    }
  }
}
