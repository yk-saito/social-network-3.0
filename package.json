    "lint:fix": "biome check --apply .",
    "solhint": "solhint --max-warnings 0 'packages/**/*.sol'"
  },
  "devDependencies": {
    "@biomejs/biome": "1.2.2",
    "solhint": "^3.6.2"
  }
}
